<%= form_with(model: @micropost, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %><%# renderは引数に変数を送ることができる
                                              fの変数の中身をuserなのかmicropostに対してなのか検証してどのエラーに大しなのかがわかる%>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>